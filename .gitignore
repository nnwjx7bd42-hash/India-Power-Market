venv/
env/
ENV/
.venv/

# ── IDE / Editor ─────────────────────────────────────────────────────────────
.vscode/
.idea/
*.swp
*.swo
*~
.cursor/

# ── Local / non-repo docs ───────────────────────────────────────────────────
IES Docs/

# ── OS artefacts ─────────────────────────────────────────────────────────────
.DS_Store
Thumbs.db

# ── Jupyter ──────────────────────────────────────────────────────────────────
.ipynb_checkpoints/
*.ipynb

# ── Environment / secrets ────────────────────────────────────────────────────
.env
.env.local
*.env

# ── Logs ─────────────────────────────────────────────────────────────────────
*.log

